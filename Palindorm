package projekat;

import java.util.Scanner;

public class Palindorm {

	public static void main(String[] args) {
		Scanner unos = new Scanner(System.in);
		System.out.println("Unesite jedan string od 5 znakova");
		String prviString=unos.next();
		System.out.println("String je: " + prviString);
		System.out.println("Palindorm je: " + prviString + prviString.substring(3, 4) + prviString.substring(2, 3) + prviString.substring(1, 2) + prviString.substring(0, 1));
	}

}
